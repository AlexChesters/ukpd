  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "chai": "^3.5.0",
    "concurrently": "^4.1.0",
    "jest": "^20.0.4",
    "ramda": "^0.22.1",
    "standard": "^12.0.1"
